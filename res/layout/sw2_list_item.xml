<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/smart_watch_2_control_width"
    android:layout_height="50px"
    android:background="@color/listitem_back"
    tools:ignore="ContentDescription,PxUsage,UselessParent" >

    <RelativeLayout
        android:id="@+id/content_container"
        android:layout_width="fill_parent"
        android:layout_height="48px"
        android:layout_alignParentTop="true" >

        <TextView
            android:id="@+id/sw2_list_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="4px"
            android:textColor="@android:color/black"
            android:textSize="@dimen/smart_watch_2_text_size_large" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/content_container" >

        <View
            android:id="@+id/sw2_row1"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/listitem_subtitle" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_below="@+id/sw2_row1"
            android:background="@color/listitem_back" />
    </RelativeLayout>

</RelativeLayout>
